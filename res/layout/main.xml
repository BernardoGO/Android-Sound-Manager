<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCCCCC"
    tools:context=".MainActivity"
    >
    
    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="a1513a33dc13f0e"
        android:gravity="top"
        ads:loadAdOnCreate="true"

         />
    
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true"
        
        >
    
        <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 

    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="System Volume"
			    />
			
			<SeekBar android:id="@+id/seekSys"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="Ringer Volume"
			    />
			
			<SeekBar android:id="@+id/seekRing"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="Notification Volume"
			    />
			
			<SeekBar android:id="@+id/seekNot"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="Media Volume"
			    />
			
			<SeekBar android:id="@+id/seekMedia"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
		
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="Alarm Volume"
			    />
			
			<SeekBar android:id="@+id/seekAlarm"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
		
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="6dp">
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"   
			    android:paddingLeft="4dp"
			    android:paddingRight="4dp"
			    android:textColor="#111111"
			    android:text="In-Call Volume"
			    />
			
			<SeekBar android:id="@+id/seekCall"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"       
			        android:max="100"
			        android:progress="0"
			        android:paddingLeft="4dp"
			    	android:paddingRight="4dp"
			        />
		</LinearLayout>
		
    </LinearLayout>
    </ScrollView>
</LinearLayout>
